{
  "name": "@dsl-cc/schematics",
  "version": "0.0.2",
  "description": "Angular Schematics for DSL Compiler Collection",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "copy:schemas": "copyfiles ng-*/**/schema.json dist",
    "copy:files": "copyfiles  ng-*/**/files/** dist",
    "postbuild": "npm run copy:schemas && npm run copy:files",
    "pretest": "npm run build",
    "test": "node ./node_modules/jasmine/bin/jasmine.js dist/**/*.spec.js --random=false",
    "pretest:debug": "npm run build",
    "test:debug": "node --inspect-brk=9229 ./node_modules/jasmine/bin/jasmine.js dist/**/*.spec.js --random=false",
    "prepack": "rimraf dist/**/*.spec.*"
  },
  "keywords": [
    "angular",
    "schematics",
    "dsl",
    "compiler"
  ],
  "author": "Oliver Kocsis",
  "license": "MIT",
  "schematics": "./collection.json",
  "files": [
    "dist",
    "collection.json"
  ],
  "dependencies": {
    "@angular-devkit/core": "^9.1.7",
    "@angular-devkit/schematics": "^9.1.7",
    "@angular/cdk": "^9.1.7",
    "@schematics/angular": "^9.1.7",
    "lodash": "^4.17.15",
    "typescript": "~3.8.2"
  },
  "devDependencies": {
    "@types/jasmine": "^3.5.0",
    "@types/lodash": "^4.14.152",
    "@types/node": "^12.11.1",
    "copyfiles": "^2.2.0",
    "jasmine": "^3.5.0",
    "rimraf": "^3.0.2"
  }
}
